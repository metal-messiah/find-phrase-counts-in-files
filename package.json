{
  "name": "new-relic-demo",
  "version": "1.0.0",
  "description": "Parses text files for their most common 3-word sequences",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "sampleArgs": "node index.js --files ./mockdata/moby_dick.txt ./mockdata/random.txt",
    "samplePipe": "cat ./mockdata/moby_dick.txt | node index.js --words 3 --limit 100"
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "../reports/coverage",
    "coverageReporters": [
      "json-summary",
      "lcov",
      "html",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "notify": true,
    "rootDir": "./",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "author": "Jordan Porter",
  "license": "ISC",
  "dependencies": {
    "commander": "^7.1.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "mock-stdin": "^1.0.0",
    "mockfs": "^0.1.5"
  }
}
